<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Light" />

    <style name="Card">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Card.Light">
    </style>

    <style name="CardButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconPadding">12dp</item>
    </style>

    <style name="CardTitle">
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="CardSummary">
        <item name="android:textAppearance">?textAppearanceBodyMedium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="GrantPermissions" parent="@style/AppTheme">
        <item name="android:colorBackground">?colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MaterialCircleIconViewLight">
        <item name="iconForegroundChroma">600</item>
        <item name="iconBackgroundChroma">50</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="MaterialCircleIconViewDark">
        <item name="iconForegroundChroma">100</item>
        <item name="iconBackgroundChroma">600</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="TerminalTutorialText">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

</resources>
